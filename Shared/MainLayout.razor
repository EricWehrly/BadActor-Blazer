<style>
    #MainLeft {
        left: .5em;
        position: fixed;
        top: 50%;
        transform: translate(0, -50%);
    }

        #MainLeft > div {
            margin-bottom: 2em;
        }

    #MainBottom {
        position: fixed;
        bottom: .5em;
        left: 50%;
        transform: translate(-50%, 0);
    }

    #MainBottomLeft {
        position: fixed;
        bottom: .5em;
        left: .5em;
    }

    #MainTopRight {
        position: fixed;
        top: .5em;
        right: 1em;
    }

    #MainRight {
        right: .5em;
        position: fixed;
        top: 50%;
        transform: translate(0, -50%);
    }

    #MainTop {
        position: fixed;
        top: .5em;
        left: 50%;
        transform: translate(-50%, 0);
    }
</style>
